<%- include('partials/header') %>

    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow-sm border-warning">
                <div class="card-header bg-warning text-dark fw-bold d-flex justify-content-between align-items-center">
                    <span>
                        <%= t.admin.form.editTitle %>
                    </span>
                    <a href="/admin" class="btn btn-sm btn-dark">
                        <%= t.admin.form.cancel %>
                    </a>
                </div>
                <div class="card-body">
                    <form action="/admin/edit/<%= product.id %>" method="POST" enctype="multipart/form-data">

                        <!-- 1. Product Information -->
                        <div class="mb-3">
                            <label class="form-label small fw-bold">
                                <%= t.admin.form.title %>
                            </label>
                            <input type="text" name="title" class="form-control" value="<%= product.title %>" required>
                        </div>

                        <div class="mb-3">
                            <label class="form-label small fw-bold">
                                <%= t.admin.form.price %>
                            </label>
                            <input type="number" name="price" class="form-control" value="<%= product.price %>"
                                required>
                        </div>

                        <div class="mb-3">
                            <label class="form-label small fw-bold">
                                <%= t.admin.form.description %>
                            </label>
                            <textarea name="description" class="form-control" rows="3"
                                required><%= product.description %></textarea>
                        </div>

                        <div class="mb-3">
                            <label class="form-label small fw-bold">
                                <%= t.admin.form.features %>
                            </label>
                            <textarea name="features" class="form-control" rows="3"
                                placeholder="<%= t.admin.form.featuresPlaceholder %>"><%= product.features ? product.features.join('\n') : '' %></textarea>
                        </div>

                        <div class="mb-3">
                            <label class="form-label small fw-bold">
                                <%= t.admin.form.warranty %>
                            </label>
                            <input type="text" name="warranty" class="form-control" value="<%= product.warranty %>"
                                placeholder="<%= t.admin.form.warrantyPlaceholder %>">
                        </div>

                        <div class="mb-3">
                            <label class="form-label small fw-bold">
                                <%= lang==='ar' ? 'رابط فيديو يوتيوب (اختياري)' : 'YouTube Video URL (Optional)' %>
                            </label>
                            <input type="url" name="video" class="form-control" value="<%= product.video || '' %>"
                                placeholder="https://www.youtube.com/watch?v=...">
                        </div>

                        <div class="mb-3">
                            <label class="form-label small fw-bold d-block">
                                <%= t.admin.form.image %>
                            </label>
                            <input type="hidden" name="deleteMainImage" id="deleteMainImageInput" value="false">
                            <% if (product.image) { %>
                                <div class="mb-2 position-relative" style="display: inline-block;"
                                    id="mainImageContainer">
                                    <img src="<%= product.image.startsWith('http') ? product.image : '/uploads/' + product.image %>"
                                        height="60" class="rounded border">
                                    <button type="button"
                                        class="btn btn-danger btn-sm p-0 position-absolute top-0 end-0 rounded-circle d-flex align-items-center justify-content-center"
                                        style="width: 20px; height: 20px; transform: translate(30%, -30%);"
                                        onclick="markMainImageForDeletion()">
                                        <span style="font-size: 12px; line-height: 1;">&times;</span>
                                    </button>
                                </div>
                                <script>
                                    function markMainImageForDeletion() {
                                        document.getElementById('mainImageContainer').style.display = 'none';
                                        document.getElementById('deleteMainImageInput').value = 'true';
                                    }
                                </script>
                                <% } %>
                                    <input type="file" name="image" class="form-control" accept="image/*">
                                    <div class="form-text text-muted small">
                                        <%= lang==='ar' ? 'اترك فارغاً للاحتفاظ بالصورة الحالية'
                                            : 'Leave empty to keep current image' %>
                                    </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label small fw-bold d-block">
                                <%= lang==='ar' ? 'صور المعرض' : 'Gallery Images' %>
                            </label>
                            <div id="deletedGalleryImagesContainer"></div>
                            <% if (product.gallery && product.gallery.length> 0) { %>
                                <div class="d-flex flex-wrap gap-2 mb-2">
                                    <% product.gallery.forEach((img, index)=> { %>
                                        <div class="position-relative" style="display: inline-block;"
                                            id="gallery-img-<%= index %>">
                                            <img src="<%= img.startsWith('http') ? img : '/uploads/' + img %>"
                                                height="60" class="rounded border">
                                            <button type="button"
                                                class="btn btn-danger btn-sm p-0 position-absolute top-0 end-0 rounded-circle d-flex align-items-center justify-content-center"
                                                style="width: 20px; height: 20px; transform: translate(30%, -30%);"
                                                onclick="markGalleryImageForDeletion('<%= img %>', <%= index %>)">
                                                <span style="font-size: 12px; line-height: 1;">&times;</span>
                                            </button>
                                        </div>
                                        <% }) %>
                                </div>
                                <script>
                                    function markGalleryImageForDeletion(imageUrl, index) {
                                        document.getElementById('gallery-img-' + index).style.display = 'none';
                                        const input = document.createElement('input');
                                        input.type = 'hidden';
                                        input.name = 'deletedGalleryImages';
                                        input.value = imageUrl;
                                        document.getElementById('deletedGalleryImagesContainer').appendChild(input);
                                    }
                                </script>
                                <% } %>
                                    <input type="file" name="gallery" class="form-control" accept="image/*" multiple>
                                    <div class="form-text text-muted small">
                                        <%= lang==='ar' ? 'تحميل صور إضافية للمعرض' : 'Upload additional gallery images'
                                            %>
                                    </div>
                        </div>

                        <hr class="my-4">

                        <!-- 2. Review Management -->
                        <div class="mb-4">
                            <label class="form-label fw-bold border-bottom pb-2 d-block">
                                <%= t.admin.form.customerReviews %>
                            </label>
                            <% if (product.reviews && product.reviews.length> 0) { %>
                                <div class="list-group">
                                    <% product.reviews.forEach(review=> { %>
                                        <div class="list-group-item <%= review.hidden ? 'bg-light text-muted' : '' %>">
                                            <div class="d-flex justify-content-between align-items-start mb-2">
                                                <div>
                                                    <div class="d-flex align-items-center gap-2 flex-wrap">
                                                        <strong>
                                                            <%= review.name || 'Customer' %>
                                                        </strong>
                                                        <span class="badge bg-warning text-dark">
                                                            <%= review.rating %> ★
                                                        </span>
                                                        <% if (review.hidden) { %>
                                                            <span class="badge bg-secondary">
                                                                <%= t.admin.form.hidden %>
                                                            </span>
                                                            <% } %>
                                                    </div>
                                                </div>
                                                <div class="d-flex gap-1">
                                                    <button type="button"
                                                        onclick="toggleReview('<%= product.id %>', '<%= review.id || review._id %>')"
                                                        class="btn btn-sm btn-outline-<%= review.hidden ? 'success' : 'secondary' %> py-0"
                                                        style="font-size: 0.8rem;">
                                                        <%= review.hidden ? t.admin.form.show : t.admin.form.hide %>
                                                    </button>
                                                    <button type="button"
                                                        onclick="deleteReview('<%= product.id %>', '<%= review.id || review._id %>')"
                                                        class="btn btn-sm btn-outline-danger py-0"
                                                        style="font-size: 0.8rem;">
                                                        <%= t.admin.form.deleteReview %>
                                                    </button>
                                                </div>
                                            </div>
                                            <p class="mb-1 small text-break">
                                                <%= review.comment %>
                                            </p>
                                            <div class="text-start">
                                                <small class="text-muted" style="font-size: 0.7rem;">
                                                    <%= review.date ? new Date(review.date).toLocaleDateString() : '' %>
                                                </small>
                                            </div>
                                        </div>
                                        <% }) %>
                                </div>
                                <% } else { %>
                                    <p class="text-muted">
                                        <%= t.product.reviews.noReviews %>
                                    </p>
                                    <% } %>
                        </div>

                        <hr class="my-4">

                        <!-- 3. Action Buttons (At Bottom) -->
                        <div class="d-grid gap-2 mb-3">
                            <button type="submit" class="btn btn-dark btn-lg">
                                <%= t.admin.form.update %>
                            </button>
                            <a href="/admin" class="btn btn-outline-secondary">
                                <%= t.admin.form.cancel %>
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    </div>

    <script>
        async function deleteImage(filename) {
            if (confirm('<%= t.admin.confirmDelete %>')) {
                try {
                    const response = await fetch(`/admin/product/image/${filename}`, {
                        method: 'DELETE'
                    });
                    if (response.ok) {
                        location.reload();
                    } else {
                        alert('Failed to delete image');
                    }
                } catch (err) {
                    console.error(err);
                    alert('Error deleting image');
                }
            }
        }

        async function toggleReview(productId, reviewId) {
            try {
                const response = await fetch(`/admin/product/${productId}/review/${reviewId}/toggle`, {
                    method: 'POST'
                });
                if (response.ok) {
                    location.reload();
                } else {
                    const text = await response.text();
                    alert('Failed to toggle review visibility: ' + response.status + ' - ' + text);
                }
            } catch (err) {
                console.error(err);
                alert('Error toggling review');
            }
        }

        async function deleteReview(productId, reviewId) {
            if (confirm('<%= t.admin.form.confirmDeleteReview %>')) {
                try {
                    const response = await fetch(`/admin/product/${productId}/review/${reviewId}/delete`, {
                        method: 'POST'
                    });
                    if (response.ok) {
                        location.reload();
                    } else {
                        alert('Failed to delete review');
                    }
                } catch (err) {
                    console.error(err);
                    alert('Error deleting review');
                }
            }
        }
    </script>

    <%- include('partials/footer') %>