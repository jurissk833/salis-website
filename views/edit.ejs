<%- include('partials/header') %>

    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow-sm border-warning">
                <div class="card-header bg-warning text-dark fw-bold d-flex justify-content-between align-items-center">
                    <span>
                        <%= t.admin.form.editTitle %>
                    </span>
                    <a href="/admin" class="btn btn-sm btn-dark">
                        <%= t.admin.form.cancel %>
                    </a>
                </div>
                <div class="card-body">
                    <form action="/admin/edit/<%= product.id %>" method="POST" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label class="form-label small fw-bold">
                                <%= t.admin.form.title %>
                            </label>
                            <input type="text" name="title" class="form-control" value="<%= product.title %>" required>
                        </div>

                        <div class="mb-3">
                            <label class="form-label small fw-bold">
                                <%= t.admin.form.price %>
                            </label>
                            <input type="number" name="price" class="form-control" value="<%= product.price %>"
                                required>
                        </div>

                        <div class="mb-3">
                            <label class="form-label small fw-bold">
                                <%= t.admin.form.description %>
                            </label>
                            <textarea name="description" class="form-control" rows="3"
                                required><%= product.description %></textarea>
                        </div>

                        <div class="mb-3">
                            <label class="form-label small fw-bold">
                                <%= t.admin.form.features %>
                            </label>
                            <textarea name="features" class="form-control" rows="3"
                                placeholder="<%= t.admin.form.featuresPlaceholder %>"><%= product.features ? product.features.join('\n') : '' %></textarea>
                        </div>

                        <div class="mb-3">
                            <label class="form-label small fw-bold">
                                <%= t.admin.form.warranty %>
                            </label>
                            <input type="text" name="warranty" class="form-control" value="<%= product.warranty %>"
                                placeholder="<%= t.admin.form.warrantyPlaceholder %>">
                        </div>

                        <div class="mb-3">
                            <label class="form-label small fw-bold d-block">
                                <%= t.admin.form.image %>
                            </label>
                            <% if (product.image) { %>
                                <div class="mb-2 position-relative" style="display: inline-block;">
                                    <img src="<%= product.image.startsWith('http') ? product.image : '/uploads/' + product.image %>"
                                        height="60" class="rounded border">
                                    <button type="button"
                                        class="btn btn-danger btn-sm p-0 position-absolute top-0 end-0 rounded-circle d-flex align-items-center justify-content-center"
                                        style="width: 20px; height: 20px; transform: translate(30%, -30%);"
                                        onclick="deleteMainImage()">
                                        <span style="font-size: 12px; line-height: 1;">&times;</span>
                                    </button>
                                </div>
                                <script>
                                    function deleteMainImage() {
                                        if (confirm('<%= lang === "ar" ? "هل أنت متأكد من حذف الصورة الرئيسية؟" : "Are you sure you want to delete the main image?" %>')) {
                                            const form = document.createElement('form');
                                            form.method = 'POST';
                                            form.action = '/admin/product/<%= product.id %>/delete-main-image';
                                            document.body.appendChild(form);
                                            form.submit();
                                        }
                                    }
                                </script>
                                <% } %>
                                    <input type="file" name="image" class="form-control" accept="image/*">
                                    <div class="form-text text-muted small">
                                        <%= lang==='ar' ? 'اتركه فارغاً للاحتفاظ بالصورة الحالية'
                                            : 'Leave empty to keep current image' %>
                                    </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label small fw-bold d-block">
                                <%= lang==='ar' ? 'صور المعرض' : 'Gallery Images' %>
                            </label>
                            <% if (product.gallery && product.gallery.length> 0) { %>
                                <div class="d-flex flex-wrap gap-2 mb-2">
                                    <% product.gallery.forEach(img=> { %>
                                        <div class="position-relative" style="display: inline-block;">
                                            <img src="<%= img.startsWith('http') ? img : '/uploads/' + img %>"
                                                height="60" class="rounded border">
                                            <button type="button"
                                                class="btn btn-danger btn-sm p-0 position-absolute top-0 end-0 rounded-circle d-flex align-items-center justify-content-center"
                                                style="width: 20px; height: 20px; transform: translate(30%, -30%);"
                                                onclick="deleteGalleryImage('<%= img %>')">
                                                <span style="font-size: 12px; line-height: 1;">&times;</span>
                                            </button>
                                        </div>
                                        <% }) %>
                                </div>
                                <script>
                                    function deleteGalleryImage(imageUrl) {
                                        if (confirm('<%= lang === "ar" ? "هل أنت متأكد من حذف هذه الصورة؟" : "Are you sure you want to delete this image?" %>')) {
                                            const form = document.createElement('form');
                                            form.method = 'POST';
                                            form.action = '/admin/product/<%= product.id %>/delete-gallery-image';

                                            const input = document.createElement('input');
                                            input.type = 'hidden';
                                            input.name = 'imageUrl';
                                            input.value = imageUrl;

                                            form.appendChild(input);
                                            document.body.appendChild(form);
                                            form.submit();
                                        }
                                    }
                                </script>
                                <% } %>
                                    <input type="file" name="gallery" class="form-control" accept="image/*" multiple>
                                    <div class="form-text text-muted small">
                                        <%= lang==='ar' ? 'تحميل صور إضافية للمعرض'
                                            : 'Upload additional images to gallery' %>
                                    </div>
                        </div>

                        <button type="submit" class="btn btn-dark w-100">
                            <%= t.admin.form.update %>
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <%- include('partials/footer') %>