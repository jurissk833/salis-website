<%- include('partials/header') %>

    <!-- Hero Section -->
    <section class="d-flex align-items-center justify-content-center text-center text-white position-relative"
        style="min-height: 80vh; background: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.4)), url('<%= (typeof siteSettings !== 'undefined' && siteSettings && siteSettings.heroImage) ? (siteSettings.heroImage.startsWith('http') ? siteSettings.heroImage : '/uploads/' + siteSettings.heroImage) : '/images/hero-bg-new.jpg' %>'); background-size: cover; background-position: center;">
        <div class="container fade-up">
            <h1 class="display-3 fw-bold mb-3 text-gold">
                <%= t.index.hero.title %>
            </h1>
            <p class="lead mb-4 text-white-50 fs-4">
                <%= t.index.hero.subtitle %>
            </p>
            <a href="#products" class="btn btn-gold btn-lg rounded-pill px-5 btn-ripple">
                <%= t.index.hero.cta %>
            </a>
        </div>
    </section>

    <!-- Product Grid -->
    <div class="container py-5" id="products">
        <div class="text-center mb-5 fade-up">
            <h2 class="display-5 fw-bold mb-2 text-gold">
                <%= t.index.heading %>
            </h2>
            <p class="text-secondary">
                <%= t.index.subheading %>
            </p>
            <div class="mx-auto bg-warning" style="height: 3px; width: 60px;"></div>
        </div>

        <div class="row g-4">
            <% if (products.length> 0) { %>
                <% products.forEach((product, index)=> { %>
                    <div class="col-12 col-md-6 col-lg-4 fade-up" style="transition-delay: <%= index * 100 %>ms;">
                        <a href="/product/<%= product.id %>" class="text-decoration-none">
                            <div class="card-product h-100 position-relative">
                                <div class="product-img-wrapper">
                                    <img src="<%= product.image ? (product.image.startsWith('http') ? product.image : '/uploads/' + product.image) : 'https://placehold.co/600x600?text=Salis' %>"
                                        class="product-img" alt="<%= product.title %>" loading="lazy">
                                </div>
                                <div class="card-body d-flex flex-column text-center">
                                    <h5 class="product-title fw-bold mb-1">
                                        <%= product.title %>
                                    </h5>
                                    <p class="product-price mb-0">
                                        <%= product.price %>
                                            <%= t.product.currency %>
                                    </p>
                                </div>
                                <!-- Subtle overlay on hover (desktop) -->
                                <div
                                    class="position-absolute top-0 start-0 w-100 h-100 d-flex align-items-center justify-content-center bg-black bg-opacity-50 opacity-0 hover-opacity-100 transition-fast d-none d-md-flex">
                                    <span class="btn btn-outline-gold rounded-pill px-4">
                                        <%= t.index.viewDetails %>
                                    </span>
                                </div>
                            </div>
                        </a>
                    </div>
                    <% }) %>
                        <% } else { %>
                            <div class="col-12 text-center py-5">
                                <h3 class="text-secondary">
                                    <%= t.index.noProducts %>
                                </h3>
                            </div>
                            <% } %>
        </div>
    </div>

    <%- include('partials/footer') %>