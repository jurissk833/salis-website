<%- include('partials/header') %>

    <div class="row align-items-center py-5">
        <!-- Product Image -->
        <div class="col-md-6 mb-4 mb-md-0">
            <div class="mb-3 d-flex align-items-center justify-content-center bg-light rounded shadow-sm"
                style="height: 500px; overflow: hidden; position: relative;">

                <!-- Main Image -->
                <img id="mainImage"
                    src="<%= product.image ? (product.image.startsWith('http') ? product.image : '/uploads/' + product.image) : 'https://placehold.co/600x600?text=No+Image' %>"
                    class="img-fluid" alt="<%= product.title %>"
                    style="max-height: 100%; max-width: 100%; object-fit: contain;">

                <!-- Main Video (Hidden by default) -->
                <iframe id="mainVideo" style="display: none; width: 100%; height: 100%;" src="" frameborder="0"
                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                    allowfullscreen>
                </iframe>
            </div>

            <% if ((product.gallery && product.gallery.length> 0) || product.video) { %>
                <div class="d-flex gap-2 overflow-auto py-2">
                    <!-- Main image as first thumbnail -->
                    <img src="<%= product.image ? (product.image.startsWith('http') ? product.image : '/uploads/' + product.image) : 'https://placehold.co/600x600?text=No+Image' %>"
                        class="gallery-thumb rounded border border-warning"
                        style="width: 80px; height: 80px; object-fit: cover; cursor: pointer; border-width: 2px !important;"
                        onclick="showMedia('image', this.src, this)">

                    <!-- Gallery Images -->
                    <% if (product.gallery) { %>
                        <% product.gallery.forEach(img=> { %>
                            <img src="<%= img.startsWith('http') ? img : '/uploads/' + img %>"
                                class="gallery-thumb rounded border"
                                style="width: 80px; height: 80px; object-fit: cover; cursor: pointer;"
                                onclick="showMedia('image', this.src, this)">
                            <% }) %>
                                <% } %>

                                    <!-- Video Thumbnail -->
                                    <% if (product.video) { // Simple regex to extract ID const
                                        videoIdMatch=product.video.match(/(?:youtube\.com\/(?:[^\/]+\/.+\/|(?:v|e(?:mbed)?)\/|.*[?&]v=)|youtu\.be\/)([^"&?\/\s]{11})/);
                                        const videoId=videoIdMatch ? videoIdMatch[1] : '' ; const thumbUrl=videoId ?
                                        `https://img.youtube.com/vi/${videoId}/0.jpg`
                                        : 'https://placehold.co/80x80?text=Video' ; %>
                                        <div class="gallery-thumb rounded border d-flex align-items-center justify-content-center bg-dark text-white position-relative"
                                            style="min-width: 80px; width: 80px; height: 80px; cursor: pointer; overflow: hidden;"
                                            onclick="showMedia('video', '<%= product.video %>', this)">
                                            <img src="<%= thumbUrl %>"
                                                style="width: 100%; height: 100%; object-fit: cover; opacity: 0.7;">
                                            <span class="position-absolute fs-4">▶</span>
                                        </div>
                                        <% } %>
                </div>

                <script>
                    function showMedia(type, source, element) {
                        const mainImage = document.getElementById('mainImage');
                        const mainVideo = document.getElementById('mainVideo');

                        // Reset borders
                        document.querySelectorAll('.gallery-thumb').forEach(el => {
                            el.classList.remove('border-warning');
                            el.style.borderWidth = '1px';
                        });

                        // Set active border
                        if (element) {
                            element.classList.add('border-warning');
                            element.style.borderWidth = '2px';
                        }

                        if (type === 'image') {
                            mainImage.src = source;
                            mainImage.style.display = 'block';
                            mainVideo.style.display = 'none';
                            mainVideo.src = ''; // Stop video
                        } else if (type === 'video') {
                            mainImage.style.display = 'none';
                            mainVideo.style.display = 'block';

                            // Convert to embed URL
                            let embedUrl = source;
                            const videoIdMatch = source.match(/(?:youtube\.com\/(?:[^\/]+\/.+\/|(?:v|e(?:mbed)?)\/|.*[?&]v=)|youtu\.be\/)([^"&?\/\s]{11})/);
                            if (videoIdMatch && videoIdMatch[1]) {
                                embedUrl = `https://www.youtube.com/embed/${videoIdMatch[1]}?autoplay=1`;
                            }

                            mainVideo.src = embedUrl;
                        }
                    }
                </script>
                <% } %>
        </div>

        <!-- Product Details -->
        <div class="col-md-6">
            <h1 class="display-4 fw-bold text-dark">
                <%= product.title %>
            </h1>
            <p class="fs-3 fw-bold text-warning mb-4">
                <%= product.price %>
                    <%= t.product.currency %>
            </p>

            <p class="lead text-muted">
                <%= product.description %>
            </p>

            <div class="card bg-light border-0 my-4">
                <div class="card-body">
                    <h5 class="fw-bold mb-3">
                        <%= t.product.featuresTitle %>
                    </h5>
                    <ul class="list-unstyled mb-0">
                        <% if (product.features && product.features.length> 0) { %>
                            <% product.features.forEach(feature=> { %>
                                <li class="mb-2 d-flex align-items-center">
                                    <span class="text-warning <%= lang === 'ar' ? 'ms-2' : 'me-2' %>">✔</span>
                                    <%= feature %>
                                </li>
                                <% }) %>
                                    <% } else { %>
                                        <li>
                                            <%= t.product.noFeatures %>
                                        </li>
                                        <% } %>
                    </ul>
                </div>
            </div>

            <div class="mb-4">
                <h6 class="text-uppercase text-black fw-bold small">
                    <%= t.product.warrantyTitle %>
                </h6>
                <p class="text-black">
                    <%= product.warranty || t.product.defaultWarranty %>
                </p>
            </div>

            <!-- WhatsApp Button -->
            <% const message=t.product.whatsappMessage.replace('{{title}}', product.title); const
                whatsappUrl=`https://wa.me/966565124889?text=${encodeURIComponent(message)}`; %>
                <a href="<%= whatsappUrl %>" target="_blank"
                    class="btn btn-success btn-lg w-100 rounded-pill py-3 fw-bold d-flex align-items-center justify-content-center gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor"
                        class="bi bi-whatsapp" viewBox="0 0 16 16">
                        <path
                            d="M13.601 2.326A7.854 7.854 0 0 0 7.994 0C3.627 0 .068 3.558.064 7.926c0 1.399.366 2.76 1.057 3.965L0 16l4.204-1.102a7.933 7.933 0 0 0 3.79.965h.004c4.368 0 7.926-3.558 7.93-7.93A7.898 7.898 0 0 0 13.6 2.326zM7.994 14.521a6.573 6.573 0 0 1-3.356-.92l-.24-.144-2.494.654.666-2.433-.156-.251a6.56 6.56 0 0 1-1.007-3.505c0-3.626 2.957-6.584 6.591-6.584a6.56 6.56 0 0 1 4.66 1.931 6.557 6.557 0 0 1 1.928 4.66c-.004 3.639-2.961 6.592-6.592 6.592zm3.615-4.934c-.197-.099-1.17-.578-1.353-.646-.182-.065-.315-.099-.445.099-.133.197-.513.646-.627.775-.114.133-.232.148-.43.05-.197-.1-.836-.308-1.592-.985-.59-.525-.985-1.175-1.103-1.372-.114-.198-.011-.304.088-.403.087-.088.197-.232.296-.346.1-.114.133-.198.198-.33.065-.134.034-.248-.015-.347-.05-.099-.445-1.076-.612-1.47-.16-.389-.323-.335-.445-.34-.114-.007-.247-.007-.38-.007a.729.729 0 0 0-.529.247c-.182.198-.691.677-.691 1.654 0 .977.71 1.916.81 2.049.098.133 1.394 2.132 3.383 2.992.47.205.84.326 1.129.418.475.152.904.129 1.246.08.38-.058 1.171-.48 1.338-.943.164-.464.164-.86.114-.943-.049-.084-.182-.133-.38-.232z" />
                    </svg>
                    <%= t.product.whatsappButton %>
                </a>
        </div>
    </div>

    <!-- Reviews Section -->
    <% if (siteSettings && siteSettings.showReviews !==false) { %>
        <div class="row mt-5">
            <div class="col-12">
                <div class="card shadow-sm">
                    <div class="card-header bg-white">
                        <h3 class="fw-bold mb-0">
                            <%= (t.product.reviews && t.product.reviews.title) ? t.product.reviews.title
                                : 'Customer Reviews' %>
                        </h3>
                    </div>
                    <div class="card-body">
                        <% /* Initialize translation defaults with hardcoded Arabic as fallback to be safe */ var tr={
                            title: 'آراء العملاء' , noReviews: 'لا توجد آراء بعد. كن أول من يقيم هذا المنتج!' ,
                            addReview: 'أضف تقييمك' , name: 'الاسم (اختياري)' , namePlaceholder: 'مثلاً: عبدالله محمد' ,
                            rating: 'التقييم' , comment: 'التجربة' , submit: 'إرسال التقييم' , average: 'التقييم العام'
                            }; if (t && t.product && t.product.reviews) { Object.assign(tr, t.product.reviews); } /*
                            Filter visible reviews */ var reviewsList=product.reviews ? product.reviews : []; var
                            visibleReviews=reviewsList.filter(function(r) { return !r.hidden; }); /* Calculate Average
                            Rating */ var avgRating=0; if (visibleReviews.length> 0) {
                            var total = visibleReviews.reduce(function(acc, r) { return acc + r.rating; }, 0);
                            avgRating = (total / visibleReviews.length).toFixed(1);
                            }
                            %>

                            <% if (visibleReviews.length> 0) { %>
                                <div class="mb-4 d-flex align-items-center gap-3">
                                    <h2 class="display-4 fw-bold text-warning mb-0">
                                        <%= avgRating %>
                                    </h2>
                                    <div>
                                        <div class="text-warning fs-4">
                                            <% for(let i=0; i<Math.round(avgRating); i++) { %>★<% } %>
                                                    <% for(let i=Math.round(avgRating); i<5; i++) { %>☆<% } %>
                                        </div>
                                        <span class="text-muted">
                                            <%= visibleReviews.length %> reviews
                                        </span>
                                    </div>
                                </div>

                                <div class="list-group mb-5">
                                    <% visibleReviews.forEach(review=> { %>
                                        <div class="list-group-item">
                                            <div class="d-flex justify-content-between">
                                                <h6 class="fw-bold">
                                                    <%= review.name %>
                                                </h6>
                                                <small class="text-muted">
                                                    <%= review.date ? new Date(review.date).toLocaleDateString() : '' %>
                                                </small>
                                            </div>
                                            <div class="text-warning mb-2">
                                                <% for(let i=1; i<=5; i++) { %>
                                                    <span
                                                        class="review-star <%= i <= review.rating ? '' : 'empty' %>">★</span>
                                                    <% } %>
                                            </div>
                                            <p class="mb-1">
                                                <%= review.comment %>
                                            </p>
                                        </div>
                                        <% }) %>
                                </div>
                                <% } else { %>
                                    <p class="text-muted mb-5">
                                        <%= tr.noReviews %>
                                    </p>
                                    <% } %>

                                        <!-- Add Review Form -->
                                        <div class="card bg-light border-0">
                                            <div class="card-body">
                                                <h5 class="fw-bold mb-3">
                                                    <%= tr.addReview %>
                                                </h5>
                                                <form action="/product/<%= product.id %>/review" method="POST">
                                                    <div class="mb-3">
                                                        <label class="form-label small fw-bold">
                                                            <%= tr.rating %>
                                                        </label>
                                                        <div class="star-rating">
                                                            <input type="radio" id="star5" name="rating" value="5"
                                                                required /><label for="star5">★</label>
                                                            <input type="radio" id="star4" name="rating"
                                                                value="4" /><label for="star4">★</label>
                                                            <input type="radio" id="star3" name="rating"
                                                                value="3" /><label for="star3">★</label>
                                                            <input type="radio" id="star2" name="rating"
                                                                value="2" /><label for="star2">★</label>
                                                            <input type="radio" id="star1" name="rating"
                                                                value="1" /><label for="star1">★</label>
                                                        </div>
                                                    </div>
                                                    <div class="mb-3">
                                                        <label class="form-label small fw-bold">
                                                            <%= tr.name %>
                                                        </label>
                                                        <input type="text" name="name" class="form-control"
                                                            placeholder="<%= tr.namePlaceholder %>">
                                                    </div>
                                                    <div class="mb-3">
                                                        <label class="form-label small fw-bold">
                                                            <%= tr.comment %>
                                                        </label>
                                                        <textarea name="comment" class="form-control" rows="3"
                                                            required></textarea>
                                                    </div>
                                                    <button type="submit" class="btn btn-dark">
                                                        <%= tr.submit %>
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                    </div>
                </div>
            </div>
        </div>
        <% } %>

            <%- include('partials/footer') %>