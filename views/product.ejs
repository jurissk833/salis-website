<%- include('partials/header') %>

    <div class="row align-items-center py-5">
        <!-- Product Image -->
        <div class="col-md-6 mb-4 mb-md-0">
            <div class="mb-3">
                <img id="mainImage"
                    src="<%= product.image ? (product.image.startsWith('http') ? product.image : '/uploads/' + product.image) : 'https://placehold.co/600x600?text=No+Image' %>"
                    class="img-fluid rounded shadow-lg w-100" alt="<%= product.title %>"
                    style="max-height: 500px; object-fit: contain; background: #f8f9fa;">
            </div>
            <% if (product.gallery && product.gallery.length> 0) { %>
                <div class="d-flex gap-2 overflow-auto py-2">
                    <!-- Main image as first thumbnail -->
                    <img src="<%= product.image ? (product.image.startsWith('http') ? product.image : '/uploads/' + product.image) : 'https://placehold.co/600x600?text=No+Image' %>"
                        class="gallery-thumb rounded border border-warning"
                        style="width: 80px; height: 80px; object-fit: cover; cursor: pointer; border-width: 2px !important;"
                        onclick="changeImage(this.src, this)">

                    <% product.gallery.forEach(img=> { %>
                        <img src="<%= img.startsWith('http') ? img : '/uploads/' + img %>"
                            class="gallery-thumb rounded border"
                            style="width: 80px; height: 80px; object-fit: cover; cursor: pointer;"
                            onclick="changeImage(this.src, this)">
                        <% }) %>
                </div>
                <script>
                    function changeImage(src, element) {
                        document.getElementById('mainImage').src = src;
                        // Update active state
                        document.querySelectorAll('.gallery-thumb').forEach(el => {
                            el.classList.remove('border-warning');
                            el.style.borderWidth = '1px';
                        });
                        element.classList.add('border-warning');
                        element.style.borderWidth = '2px';
                    }
                </script>
                <% } %>
        </div>

        <!-- Product Details -->
        <div class="col-md-6">
            <h1 class="display-4 fw-bold text-dark">
                <%= product.title %>
            </h1>
            <p class="fs-3 fw-bold text-warning mb-4">
                <%= product.price %>
                    <%= t.product.currency %>
            </p>

            <p class="lead text-muted">
                <%= product.description %>
            </p>

            <div class="card bg-light border-0 my-4">
                <div class="card-body">
                    <h5 class="fw-bold mb-3">
                        <%= t.product.featuresTitle %>
                    </h5>
                    <ul class="list-unstyled mb-0">
                        <% if (product.features && product.features.length> 0) { %>
                            <% product.features.forEach(feature=> { %>
                                <li class="mb-2 d-flex align-items-center">
                                    <span class="text-warning <%= lang === 'ar' ? 'ms-2' : 'me-2' %>">âœ”</span>
                                    <%= feature %>
                                </li>
                                <% }) %>
                                    <% } else { %>
                                        <li>
                                            <%= t.product.noFeatures %>
                                        </li>
                                        <% } %>
                    </ul>
                </div>
            </div>

            <div class="mb-4">
                <h6 class="text-uppercase text-black fw-bold small">
                    <%= t.product.warrantyTitle %>
                </h6>
                <p class="text-black">
                    <%= product.warranty || t.product.defaultWarranty %>
                </p>
            </div>

            <!-- WhatsApp Button -->
            <% const message=t.product.whatsappMessage.replace('{{title}}', product.title); const
                whatsappUrl=`https://wa.me/966565124889?text=${encodeURIComponent(message)}`; %>
                <a href="<%= whatsappUrl %>" target="_blank"
                    class="btn btn-success btn-lg w-100 rounded-pill py-3 fw-bold d-flex align-items-center justify-content-center gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor"
                        class="bi bi-whatsapp" viewBox="0 0 16 16">
                        <path
                            d="M13.601 2.326A7.854 7.854 0 0 0 7.994 0C3.627 0 .068 3.558.064 7.926c0 1.399.366 2.76 1.057 3.965L0 16l4.204-1.102a7.933 7.933 0 0 0 3.79.965h.004c4.368 0 7.926-3.558 7.93-7.93A7.898 7.898 0 0 0 13.6 2.326zM7.994 14.521a6.573 6.573 0 0 1-3.356-.92l-.24-.144-2.494.654.666-2.433-.156-.251a6.56 6.56 0 0 1-1.007-3.505c0-3.626 2.957-6.584 6.591-6.584a6.56 6.56 0 0 1 4.66 1.931 6.557 6.557 0 0 1 1.928 4.66c-.004 3.639-2.961 6.592-6.592 6.592zm3.615-4.934c-.197-.099-1.17-.578-1.353-.646-.182-.065-.315-.099-.445.099-.133.197-.513.646-.627.775-.114.133-.232.148-.43.05-.197-.1-.836-.308-1.592-.985-.59-.525-.985-1.175-1.103-1.372-.114-.198-.011-.304.088-.403.087-.088.197-.232.296-.346.1-.114.133-.198.198-.33.065-.134.034-.248-.015-.347-.05-.099-.445-1.076-.612-1.47-.16-.389-.323-.335-.445-.34-.114-.007-.247-.007-.38-.007a.729.729 0 0 0-.529.247c-.182.198-.691.677-.691 1.654 0 .977.71 1.916.81 2.049.098.133 1.394 2.132 3.383 2.992.47.205.84.326 1.129.418.475.152.904.129 1.246.08.38-.058 1.171-.48 1.338-.943.164-.464.164-.86.114-.943-.049-.084-.182-.133-.38-.232z" />
                    </svg>
                    <%= t.product.whatsappButton %>
                </a>
        </div>
    </div>

    <%- include('partials/footer') %>